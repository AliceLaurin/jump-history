<h1> Reserver le voyage <%= @travel.name %> </h1>

<%= simple_form_for [@user, @travel, @booking] do |f| %>
    <%= f.input :date_of_beginning,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :date_of_ending,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :number_of_people %>
    <%= f.submit%>
  <% end %>
